<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <h1>ツイートを検索する</h1>
    <%= form_for(@sample, url: result_samples_path) do |f| %>
      <div class="col-xs-10">
        <%= f.text_field :content, class: 'form-control' %>
      </div>
      <div class="col-xs-2">
        <%= button_tag :type => "submit", :class =>"btn btn-default btn-block" do %>
          <%= fa_icon 'search', class: 'fa-lg' %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
